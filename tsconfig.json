{
  "compilerOptions": {
    "strict": false,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "watch": false,
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "api/client", "dist"]
}
